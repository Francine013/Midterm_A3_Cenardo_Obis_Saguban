@model Library_Management.Models.BookListViewModel

<form method="post" id="deleteBookForm" action="@Url.Action("Delete", "Book")">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.BookId" />

    <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="exampleModalLabel">Delete Book: @Model.Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <p>Are you sure you want to delete this book?</p>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
